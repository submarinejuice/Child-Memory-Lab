        ];

        // Update the site count
        document.getElementById('site-count').textContent = sites.length;

        // Generate site cards
        function generateSiteCards() {
            const grid = document.getElementById('sites-grid');
            
            sites.forEach(site => {
                const card = document.createElement('div');
                card.className = 'site-card';
                card.innerHTML = `
                    <h3>${site.title}</h3>
                    <p>${site.description}</p>
                    <a href="${site.folder}/index.html" class="visit-btn">Visit Site</a>
                `;
                grid.appendChild(card);
            });
        }

        // Initialize the page
        generateSiteCards();

        // Add click tracking for research purposes
        document.querySelectorAll('.visit-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                console.log('Site visited:', this.getAttribute('href'));
            });
        });
    </script>
